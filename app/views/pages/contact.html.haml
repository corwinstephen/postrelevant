= render partial: "nav"

.container
  .col-md-offset-1.col-md-10
    .centerbox.green
      .padded
        %h1 Rad. Let's get in touch.
        = form_for ContactSubmission.new, autocomplete: :off do |f|

          = f.text_field :name, placeholder: "Name"
          = f.email_field :email, placeholder: "Email"
          = f.phone_field :phone, placeholder: "Phone #"

          .text-right.margin-top-more
            %button Lezgo >